{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-configure",
            "type": "shell",
            "command": "cmake -S . -B build -G \"Visual Studio 17 2022\" -A x64",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "build-matmul",
            "type": "shell",
            "command": "cmake --build build --config Release --target matmul_test",
            "dependsOn": [
                "cmake-configure"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "run-matmul",
            "type": "shell",
            "command": ".\\build\\bin\\matmul_test.exe",
            "dependsOn": "build-matmul",
            "problemMatcher": []
        }
    ]
}
